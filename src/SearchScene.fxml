<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="ap" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SearchScene">
   <children>
      <ListView fx:id="myListView" layoutX="17.0" layoutY="87.0" onMouseClicked="#handleMouseClick" prefHeight="401.0" prefWidth="200.0" />
      <TextField fx:id="mySearchWord" layoutX="17.0" layoutY="45.0" onAction="#searchWord" onKeyPressed="#lookUpWord" prefHeight="30.0" prefWidth="200.0" />
      <Button fx:id="myAddButton" layoutX="81.0" layoutY="507.0" mnemonicParsing="false" onAction="#addScene" prefHeight="43.0" prefWidth="71.0" text="Add">
         <font>
            <Font size="20.0" />
         </font></Button>
      <TextArea fx:id="myTranslateWord" layoutX="332.0" layoutY="121.0" prefHeight="367.0" prefWidth="448.0" />
      <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="802.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Label fx:id="myLabel" alignment="CENTER" layoutX="332.0" layoutY="45.0" prefHeight="51.0" prefWidth="448.0">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button fx:id="myDeleteButton" layoutX="332.0" layoutY="507.0" mnemonicParsing="false" onAction="#deleteWord" text="Delete">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="myChangeButton" layoutX="685.0" layoutY="507.0" mnemonicParsing="false" onAction="#changeScene" text="Change">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
